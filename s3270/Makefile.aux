# Auxiliary makefile for s3270

PRODUCT=s3270

all:
	@echo "Must pick a specific make target."

# Development tools.

include s3270_files.mk

MISC = $(PRODUCT).man Examples/cms_cmd.expect LICENSE Makefile.in README \
	conf.h.in configure configure.in mkversion.sh \
	parts.h.in s3270_files.mk s3270_glue.bash version.txt \
	x3270-script.man x3270_glue.expect x3270if.man

HTML = html/$(PRODUCT)-man.html html/Bugs.html html/FAQ.html html/Intro.html \
	html/Lineage.html html/README.html html/ReleaseNotes.html \
	html/Resources.html html/SSL.html html/Wishlist.html \
	html/x3270-script.html html/x3270.xbm html/Unix-x3270if.html

FILES = $(SOURCES) $(HEADERS) $(MISC) $(HTML)

src.tgz: prepare $(FILES)

prepare: configure
configure: configure.in
	autoconf

MANDEP = man.m4 html.m4 m4man Makefile.aux version.txt
MKMAN = ./m4man -t man -p $(PRODUCT)
MKHTML = ./m4man -t html -p $(PRODUCT)

man: $(PRODUCT).man x3270if.man x3270-script.man $(HTML)

$(PRODUCT).man: x3270.man.m4 ft.inc resources.inc hostname.inc $(MANDEP)
	$(MKMAN) -n $(PRODUCT) -o $@ x3270.man.m4
html/$(PRODUCT)-man.html: x3270.man.m4 ft.inc resources.inc hostname.inc $(MANDEP)
	$(MKHTML) -n $(PRODUCT) -o $@ x3270.man.m4
x3270if.man: x3270if.man.m4 $(MANDEP)
	$(MKMAN) -n x3270if -o $@ x3270if.man.m4
html/Unix-x3270if.html: x3270if.man.m4 ft.inc $(MANDEP)
	$(MKHTML) -n x3270if -o $@ x3270if.man.m4
x3270-script.man: x3270-script.man.m4 ft.inc $(MANDEP)
	$(MKMAN) -n x3270-script -o $@ x3270-script.man.m4
html/x3270-script.html: x3270-script.man.m4 ft.inc $(MANDEP)
	$(MKHTML) -n x3270-script -o $@ x3270-script.man.m4
html/ReleaseNotes.html: html/documentation-relnotes-body.html mkstand.bash
	./mkstand.bash "$(PRODUCT) Release Notes" html/documentation-relnotes-body.html $@
html/Resources.html: resource-body make-resource-doc.pl version.txt
	./make-resource-doc.pl -o $@ $(PRODUCT) <resource-body

# Special rule to build the SSL documentation.
html/SSL.html: documentation-ssl-body.html mkstand.bash
	./mkstand.bash "$(PRODUCT) and TLS" documentation-ssl-body.html $@
